{
  "key": "gmailSender",
  "name": "GMail Sender",
  "version": "1.0.0",
  "platformVersion": "1.0.0",
  "actions": [
    {
      "key": "sendEmailViaGmail",
      "name": "Send email via GMail",
      "display": {
        "label": "Send email via GMail",
        "description": "Send email via GMail"
      },
      "operation": {
        "type": "api",
        "operation": {
          "url": "wss://grindery-gmail-connector.herokuapp.com/"
        },
        "inputFields": [
          {
            "key": "to",
            "label": "To",
            "type": "string",
            "required": true,
            "default": "receiver@mail.com"
          },
          {
            "key": "cc",
            "label": "Cc",
            "type": "string",
            "required": false,
            "default": "cc@mail.com"
          },
          {
            "key": "bcc",
            "label": "Bcc",
            "type": "string",
            "required": false,
            "default": "bcc@mail.com"
          },
          {
            "key": "subject",
            "label": "Subject",
            "type": "string",
            "required": true,
            "default": "subject of email"
          },
          {
            "key": "message",
            "label": "Message",
            "type": "string",
            "required": true,
            "default": "message"
          }
        ],
        "outputFields": [
        ]
      }
    }
  ]
}